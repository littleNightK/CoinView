<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="16dp">

    <ImageView
        android:id="@+id/backButton"
        android:layout_width="40dp"
        android:layout_height="49dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:clickable="true"
        android:contentDescription="Go back to previous screen"
        android:focusable="true"
        android:src="@drawable/baseline_arrow_back_24" />

    <!-- Add an ImageView for the cryptocurrency icon -->

    <!-- Add a divider line below cryptoIcon -->

    <ImageView
        android:id="@+id/cryptoIcon"
        android:layout_width="209dp"
        android:layout_height="207dp"
        android:layout_centerHorizontal="true"

        android:layout_marginTop="16dp" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/cryptoIcon"
        android:layout_marginTop="16dp"
        android:background="@color/light_white"/>

    <!-- Add the layout for the cryptocurrency details similar to money_type_item.xml -->
    <TextView
        android:id="@+id/currencyDetailLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Currency Details"
        android:textSize="18sp"
        android:layout_below="@id/divider"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textColor="@color/light_white"/>

    <!-- Symbol and Name on the left -->
    <TextView
        android:id="@+id/cryptoSymbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/currencyDetailLabel"
        android:layout_marginTop="16dp"
        android:text=""
        android:textColor="@color/light_white"
        android:layout_marginLeft="60dp"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/cryptoName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cryptoSymbol"
        android:text=""
        android:textSize="16sp"
        android:textColor="@color/light_white"
        android:layout_marginLeft="60dp"

        android:layout_marginTop="8dp" />

    <!-- Price and Change Price on the right -->
    <TextView
        android:id="@+id/cryptoPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20sp"
        android:textColor="@color/light_white"
        android:layout_below="@id/currencyDetailLabel"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="60dp"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/cryptoChange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="16sp"
        android:layout_below="@id/cryptoPrice"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp"
        android:textColor="@color/light_white"
        android:layout_marginRight="60dp"
        />



    <ImageView
        android:id="@+id/cryptoNewItemIcon"
        android:layout_width="328dp"
        android:layout_height="219dp"
        android:layout_below="@id/cryptoChange"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp"

        />


</RelativeLayout>
